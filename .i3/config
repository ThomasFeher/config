# i3 config file (v4)
#
# Please see http://i3wm.org/docs/userguide.html for a complete reference!
#
# This config file uses keycodes (bindsym) and was written for the QWERTY
# layout.
#
# To get a config file with the same key positions, but for your current
# layout, use the i3-config-wizard
#

# keys:
# t - tabbed
# s - stacked
# d - default (toggle split)
# p - parent
# c - child
# g - switch mode (goto)
# v - vertical split
# h - horizontal split
# k - kill window
# q - quit (not bound atm)
# n - dmenu (new)
# f - fullscreen
# r - "re" mode
# o - off mode
# e - focus right
# i - focus left
# l - focus up
# a - focus down
# m - move mode
# return - terminal

# modes:
# rl  - reload config
# ri  - restart i3
# rs  - resize
#
# me - move right
# mi - move left
# ml - move up
# ma - move down
#
# g<space> - workspace 0
# gm       - workspace 1
# g,       - workspace 2
# g.       - workspace 3
# gn       - workspace 4
# gr       - workspace 5
# gt       - workspace 6
# gh       - workspace 7
# gg       - workspace 8
# gf       - workspace 9
#
# m<space> - move container to workspace 0
# mm       - move container to workspace 1
# m,       - move container to workspace 2
# m.       - move container to workspace 3
# mn       - move container to workspace 4
# mr       - move container to workspace 5
# mt       - move container to workspace 6
# mh       - move container to workspace 7
# mg       - move container to workspace 8
# mf       - move container to workspace 9
# md       - move workspace to display right
#
# return,esc - back to default mode

# font for window titles. ISO 10646 = Unicode
font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1

# use Mouse+Mod1 to drag floating windows to their wanted position
floating_modifier Mod1

# start a terminal
#bindsym Mod1+Return exec i3-sensible-terminal
bindsym Mod1+Return exec urxvt -e screen

# kill focused window
#bindsym Mod1+Shift+q kill
bindsym Mod1+k kill

# start dmenu (a program launcher) "_e_xecute"
bindsym Mod1+n exec dmenu_run

# change focus
bindsym Mod1+i focus left
bindsym Mod1+a focus down
bindsym Mod1+l focus up
bindsym Mod1+e focus right

# alternatively, you can use the cursor keys:
bindsym Mod1+Left focus left
bindsym Mod1+Down focus down
bindsym Mod1+Up focus up
bindsym Mod1+Right focus right

# move focused window
bindsym Mod1+Shift+i move left
bindsym Mod1+Shift+a move down
bindsym Mod1+Shift+l move up
bindsym Mod1+Shift+e move right

# alternatively, you can use the cursor keys:
bindsym Mod1+Shift+Left move left
bindsym Mod1+Shift+Down move down
bindsym Mod1+Shift+Up move up
bindsym Mod1+Shift+Right move right

# split in horizontal orientation
bindsym Mod1+h split h

# split in vertical orientation
bindsym Mod1+v split v

# enter fullscreen mode for the focused container
bindsym Mod1+f fullscreen

# change container layout (stacked, tabbed, default)
bindsym Mod1+s layout stacking
bindsym Mod1+t layout tabbed
#bindsym Mod1+g layout default
bindsym Mod1+d layout toggle split

# toggle tiling / floating
bindsym Mod1+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym Mod1+space focus mode_toggle

# focus the parent container
bindsym Mod1+p focus parent

# focus the child container
bindsym Mod1+c focus child

# switch to workspace
bindsym Mod1+1 workspace number 1
bindsym Mod1+2 workspace number 2
bindsym Mod1+3 workspace number 3
bindsym Mod1+4 workspace number 4
bindsym Mod1+5 workspace number 5
bindsym Mod1+6 workspace number 6
bindsym Mod1+7 workspace number 7
bindsym Mod1+8 workspace number 8
bindsym Mod1+9 workspace number 9
bindsym Mod1+0 workspace number 10

# move focused container to workspace
bindsym Mod1+Shift+1 move container to workspace number 1
bindsym Mod1+Shift+2 move container to workspace number 2
bindsym Mod1+Shift+3 move container to workspace number 3
bindsym Mod1+Shift+4 move container to workspace number 4
bindsym Mod1+Shift+5 move container to workspace number 5
bindsym Mod1+Shift+6 move container to workspace number 6
bindsym Mod1+Shift+7 move container to workspace number 7
bindsym Mod1+Shift+8 move container to workspace number 8
bindsym Mod1+Shift+9 move container to workspace number 9
bindsym Mod1+Shift+0 move container to workspace number 10

# reload the configuration file
bindsym Mod1+Shift+c exec j4-make-config tango; reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym Mod1+Shift+w restart
# exit i3 (logs you out of your X session)
bindsym Mod1+Shift+o exit

mode "re… -_L_oad config -start _I_3 -_S_ize window" {
		# reload the configuration file
		bindsym l exec j4-make-config tango; reload; mode "default"
		# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
		bindsym i restart; mode "default"
		bindsym s mode resize
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym Mod1+r mode "re… -_L_oad config -start _I_3 -_S_ize window";

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym i           resize shrink width 10 px or 10 ppt
        bindsym l           resize grow height 10 px or 10 ppt
        bindsym a           resize shrink height 10 px or 10 ppt
        bindsym e 		    resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left        resize shrink width 10 px or 10 ppt
        bindsym Down        resize grow height 10 px or 10 ppt
        bindsym Up          resize shrink height 10 px or 10 ppt
        bindsym Right       resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

#bindsym Mod1+r mode "resize"
#bindsym Mod1+j mode "resize"

# switching mode like in screen
mode "switch" {
	#switch with keys corresponding to neo layout keypad on layer 4
	bindsym "space"  workspace number 0;mode "default"
	bindsym m workspace number 1;mode "default"
	bindsym "comma" workspace number 2;mode "default"
	bindsym "period" workspace number 3;mode "default"
	bindsym n workspace number 4;mode "default"
	bindsym r workspace number 5;mode "default"
	bindsym t workspace number 6;mode "default"
	bindsym h workspace number 7;mode "default"
	bindsym g workspace number 8;mode "default"
	bindsym f workspace number 9;mode "default"
	bindsym s scratchpad show;mode "default"

	# back to normal: Enter or Escape
	bindsym Return mode "default"
	bindsym Escape mode "default"
	bindsym Mod1+g mode "default"
}
# "_g_oto"
bindsym Mod1+g mode "switch"

# moving mode like in screen
mode "move" {
	#move to workspaces with keys corresponding to neo layout keypad on layer 4
	bindsym "space"  move container to workspace number 0;mode "default"
	bindsym m move container to workspace number 1;mode "default"
	bindsym "comma" move container to workspace number 2;mode "default"
	bindsym "period" move container to workspace number 3;mode "default"
	bindsym n move container to workspace number 4;mode "default"
	bindsym r move container to workspace number 5;mode "default"
	bindsym t move container to workspace number 6;mode "default"
	bindsym h move container to workspace number 7;mode "default"
	bindsym g move container to workspace number 8;mode "default"
	bindsym f move container to workspace number 9;mode "default"
	bindsym s move scratchpad;mode "default"

	# move focused window
	bindsym i move left; mode "default"
	bindsym a move down; mode "default"
	bindsym l move up; mode "default"
	bindsym e move right; mode "default"

	# move to next display
	bindsym d move workspace to output right; mode "default"

	# back to normal: Enter or Escape
	bindsym Return mode "default"
	bindsym Escape mode "default"
	bindsym Mod1+m mode "default"
}
bindsym Mod1+m mode "move"

#mode to switch off all key bindings except of return and escape
mode "i3-off"{
	# back to normal: Enter or Escape
	bindsym Return mode "default"
	bindsym Escape mode "default"
}
bindsym Mod1+o mode "i3-off"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	status_command i3status
	#status_command i3status | my_i3status.py

colors {
    # <workclass> <border> <backg> <text>
    focused_workspace 	$lightblue $blue $white
    active_workspace 	$darkgrey $black $grey
    inactive_workspace	$black $darkblack $grey
    urgent_workspace 	$lightred $red $white
    background #222222
	separator  #444444
	statusline $darkgrey
}

	# show tray on primary monitor
	tray_output primary
}

# switch off laptop monitor if external monitor is connected
exec ~/bin/xrandrStartup.pl

# load background image
exec xsetbg $(find ~/Bilder/wallpapers/ -maxdepth 1 -type f | shuf -n1)

# autostart
#exec /usr/lib/polkit-gnome-authentication-agent-1
exec /usr/lib/lxpolkit/lxpolkit
exec --no-startup-id i3-msg 'workspace number 1; layout tabbed; exec thunderbird; exec jitsi; exec taskcoach.sh'
exec --no-startup-id i3-msg 'workspace number 2; exec firefox'
exec --no-startup-id i3-msg 'workspace number 3; exec urxvt -e screen'
exec --no-startup-id i3-msg 'workspace number 5; exec dolphin'
exec --no-startup-id i3-msg 'workspace number 9; layout tabbed; exec urxvt -e weechat-curses; exec pigdin'
exec kopete
exec dropbox start
#exec --no-startup-id nm-applet #network manager

#sound control
bindsym XF86AudioMute exec amixer -q set Master toggle
bindsym XF86AudioRaiseVolume exec amixer -q set Master 5%+ unmute
bindsym XF86AudioLowerVolume exec amixer -q set Master 5%- unmute

# program start bindings
#bindsym Mod1+m exec thunderbird

